<div class="container">
<h1><%= @post.title %></h1>
<p><%= @post.body %></p>

<% if @post.video.attached? %>
  <div class="video">
    <%= video_tag url_for(@post.video), controls: true, size: "640x480" %>
  </div>
<% end %>

<%= link_to 'Edit', edit_post_path(@post) %> |
<%= link_to 'Back', posts_path %>

<h1><%= @post.title %></h1>
<p><%= @post.body %></p>

<% if user_signed_in? %>
  <% if @post.user != current_user %>
    <%= link_to 'Start Chat with Owner', new_chat_path(post_id: @post.id), class: 'btn btn-info' %>
  <% end %>
<% end %>
</div>