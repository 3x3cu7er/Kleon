<h1>New Chat</h1>

<%= form_with model: @chat, local: true do |form| %>
  <div class="field">
    <%= form.label :title %>
    <%= form.text_field :title, class: 'form-control' %>
  </div>

  <% if @chat.post_id %>
    <div class="field">
      <%= form.hidden_field :post_id %>
      <p><%= "Chat related to Post ##{@chat.post_id}" %></p>
    </div>
  <% end %>

  <div class="actions">
    <%= form.submit 'Create Chat', class: 'btn btn-primary' %>
  </div>
<% end %>
