<h1><%= @chat.title %></h1>

<% if @chat.post %>
  <p>Related to post: <%= link_to @chat.post.title, post_path(@chat.post) %></p>
<% end %>

<div class="messages">
  <% @messages.each do |message| %>
    <div class="message">
      <strong><%= message.user.email %>:</strong>
      <p><%= message.content %></p>
    </div>
  <% end %>
</div>

<%= form_with model: [@chat, @message], local: true do |form| %>
  <div class="field">
    <%= form.text_area :content, rows: 3 %>
  </div>
  <div class="actions">
    <%= form.submit 'Send', class: 'btn btn-primary' %>
  </div>
<% end %>
